{
  "name": "deep-seas",
  "version": "0.1.0",
  "description": "An incremental fishing adventure game",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "package": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^23.1.0",
    "electron-builder": "^23.6.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.5",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.example.deepseas",
    "productName": "Deep Seas",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "index.html"
    ]
  }
}
